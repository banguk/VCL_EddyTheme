//---------------------------------------------------------------------------

#pragma hdrstop

#include "TEddyBaseControl.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

__fastcall TEddyBaseControl::TEddyBaseControl(TComponent *Owner) : TCustomControl(Owner)
{
    // [성능/품질] 화면 깜빡임 제거를 위해 더블 버퍼링 활성화
    DoubleBuffered = true;

    // 기본 크기 설정 (안 하면 0x0이라 화면에 안 보여서 당황하게 됨)
    Width = 100;
    Height = 40;
    s
}

__fastcall TEddyBaseControl::~TEddyBaseControl()
{
    // 특별히 해제할 메모리가 없으면 비워둡니다.
}

void __fastcall TEddyBaseControl::Paint(void)
{
    // 베이스 클래스의 Paint는 기본 배경만 칠합니다.
    // 디자인 모드(IDE)에서는 점선 테두리를 그려서 위치를 파악하게 돕습니다.

    Canvas->Brush->Style = bsSolid;
    Canvas->Brush->Color = GetTheme()->GetBackgroundColor();

}

TEddyThemeManager *__fastcall TEddyBaseControl::GetTheme()
{
    return TEddyThemeManager::GetInstance();
}

