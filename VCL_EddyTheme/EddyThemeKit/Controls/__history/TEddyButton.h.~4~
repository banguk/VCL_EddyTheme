//---------------------------------------------------------------------------

#ifndef TEddyButtonH
#define TEddyButtonH
//---------------------------------------------------------------------------

class PACKAGE TEddyButton : public TEddyBaseControl
{
  __published:
    // 버튼 텍스트 속성 노출
    __property Caption;

  public:
    __fastcall TEddyButton(TComponent *Owner);
    __fastcall ~TEddyButton();

  protected:
    // [그리기] 버튼 모양을 직접 그립니다.
    virtual void __fastcall Paint(void) override;

    // [마우스 동작] 클릭 처리
    virtual void __fastcall MouseDown(TMouseButton Button, TShiftState Shift, int X, int Y) override;
    virtual void __fastcall MouseUp(TMouseButton Button, TShiftState Shift, int X, int Y) override;

    // [메시지 처리] 마우스 호버 효과를 위해 VCL 시스템 메시지를 처리합니다.
    void __fastcall CMMouseEnter(TMessage &Message);
    void __fastcall CMMouseLeave(TMessage &Message);

    // VCL 메시지 맵 (어떤 메시지가 오면 어떤 함수를 부를지 연결)
    BEGIN_MESSAGE_MAP
    VCL_MESSAGE_HANDLER(CM_MOUSEENTER, TMessage, CMMouseEnter)
    VCL_MESSAGE_HANDLER(CM_MOUSELEAVE, TMessage, CMMouseLeave)
    END_MESSAGE_MAP(TEddyBaseControl)
};

#endif

